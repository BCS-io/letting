<% @title='Login' %>
<fieldset id='login'>
  <%= form_tag sessions_path do %>
    <div class='grid'>
      <div class='col-1-4  grid-row  vertical-line-spacer  grid-label'>
        <%= label_tag :email %>
      </div>
      <div class='col-3-4  vertical-line-spacer'>
        <%= text_field_tag :email, params[:email], autofocus: true %>
      </div>

      <div class='col-1-4  grid-row  bottom-spacer  grid-label'>
        <%= label_tag :password %>
      </div>
      <div class='col-3-4  bottom-spacer'>
        <%= password_field_tag :password %>
      </div>

      <div class='col-1-4  grid-row  bottom-spacer'>&nbsp;</div>
      <div class='col-3-4  vertical-line-spacer'>
        <%= submit_tag "Log In", class: 'Button  ButtonPrimary  width-7-12' %>
      </div>
    </div>
  <% end %>
</fieldset>
