<% @title='Client Accounts' %>

<div class='grid  shell'>

  <div class='col-21-24  grid-row  vertical-spacer'>  <!-- 1st column -->

    <div class='col-1-4  grid-row  faded  bottom-line-spacer'>
      Client ID and Name
    </div>
    <div class='col-1-4  bottom-line-spacer'><%= @client.human_ref %></div>
    <div class='col-2-4  bottom-line-spacer'>
      <%= @client.full_name %>
    </div>

    <%= form_tag client_path(@client), method: 'get' do %>
      <div class='col-5-24  grid-row  bottom-line-spacer'>Payments made between:</div>
      <div class='col-19-24  bottom-line-spacer'>
        <%= date_field_tag :start_date, params[:start_date], autofocus: true, class: 'width-9-24' %> and
        <%= date_field_tag :end_date, params[:end_date], autofocus: true, class: 'width-9-24' %>
        <button type='submit' class='width-4-24  no-print' id='credit_search' title='Credit Search'>
          <%= fa_icon('search lg') %>
        </button>
      </div>
    <% end %>
  </div> <!-- end of 1st column -->

  <div class='col-1-1  grid-row'>
    <div class='tabs'>
      <ul class='tab-links'>
         <li class='active'><a href="#mar-sep">March/September</a></li>
         <li><a href="#jun-dec">June/December</a></li>
      </ul>

      <div class='grid  shell  tab-content'>

        <div id="mar-sep" class="tab  active">
          <h3>March/September Ground Rents</h3>
          <%= render 'accounts_heading' %>
          <%= render 'payments_made', client: @client %>
        </div> <!-- close #mar-sep -->

        <div id="jun-dec"  class="tab">
          <h3>June/December Ground Rents</h3>
          <%= render 'accounts_heading' %>
          <%= render 'payments_made', client: @client %>
        </div> <!-- close #jun-dec -->
      </div> <!-- grid shell tab-content  -->
    </div> <!-- close tabs -->

    <% if @client.properties.empty? %>
      <%= render 'information/grid', information: 'The Client has no properties.' %>
    <% end %>
  </div> <!-- close grid-row  for tabs -->
</div> <!-- close grid  shell-->
