<div class='shell'>

  <% if @cycle.cycle_type == 'monthly' %>
    <% @title='View Monthly Charge Cycle' %>
    <%= render 'show_top', cycle: @cycle %>
    <%= render 'due_ons/monthly', cycle: @cycle %>
    <%= render 'cycle_charged_ins/form', cycle: @cycle, disabler: true %>
  <% else %>
    <% @title='View Charge Cycle' %>
    <%= render 'show_top', cycle: @cycle %>
    <%= render 'due_ons/view', cycle: @cycle %>
    <%= render 'cycle_charged_ins/form', cycle: @cycle, disabler: true %>
  <% end %>

</div>
