<% @title='View Cycle' %>

<div class='grid  shell-1-12'>

  <div class='col-19-24  grid-row  bottom-spacer'>    <!-- 1st column -->

    <div class='col-5-24  grid-row  bottom-half-line-spacer  faded'>Name</div>
    <div class='col-14-24 bottom-half-line-spacer'><%= @cycle.name %></div>

    <div class='col-5-24  grid-row  bottom-half-line-spacer  faded'>Order</div>
    <div class='col-3-24  bottom-half-line-spacer'><%= @cycle.order %></div>

    <% if @cycle.monthly? %>
      <%= render 'due_ons/monthly', cycle: @cycle %>
    <% else %>
      <%= render 'due_ons/term', cycle: @cycle %>
    <% end %>
  </div>

  <div class='col-5-24'>  <!-- 2nd column -->
    <%= edit_link @cycle, size: '2x' %>
  </div>
</div> <!-- grid shell -->
