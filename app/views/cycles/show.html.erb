<% @title='View Cycle' %>

<div class='grid shell'>
  <div class='col-18-24 bottom-spacer'>
    <div class='grid-row col-8-24 bottom-spacer'>
      &nbsp;
    </div>
    <div class='col-3-24 bottom-spacer faded'>
      Name
    </div>
    <div class='col-13-24  bottom-spacer'>
      <%= @cycle.name %>
    </div>

    <div class='grid-row col-8-24 bottom-spacer'>
      &nbsp;
    </div>
    <div class='col-3-24 bottom-spacer faded'>
      Order
    </div>
    <div class='col-1-24 bottom-spacer r-align'>
      <%= @cycle.order %>
    </div>
    <div class='col-12-24  bottom-spacer'>
      &nbsp;
    </div>
    <div class='grid-row col-24-24'>
      &nbsp;
    </div>
    <% if @cycle.cycle_type == 'monthly' %>
      <%= render 'due_ons/monthly', cycle: @cycle %>
    <% else %>
      <%= render 'due_ons/term', cycle: @cycle %>
    <% end %>
  </div>
  <div class='col-6-24 no-r-pad'>
    <%= link_to fa_icon('edit 3x'), edit_cycle_path(@cycle), title: 'Edit', class: 'plain-button float-right' %>
  </div>
</div> <!-- grid shell -->
