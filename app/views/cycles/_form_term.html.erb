<%= form_for cycle do |f| %>
  <%= render 'shared/errors', object: cycle %>

  <fieldset id='cycle' class='shell'>

    <div class="grid">
      <div class='grid-row col-12-24 bottom-spacer'>
        <h2>Cycle</h2>
      </div>
      <div class='col-12-24 bottom-spacer'>
        <%= view_link(cycle) %>
      </div>
    </div>

    <div class='grid' >
      <div class='grid-row col-4-24 bottom-spacer'>
        &nbsp;
      </div>
      <div class='col-3-24  bottom-spacer faded'>
        <%= f.label :name %>
        <%= f.hidden_field :cycle_type, cycle_type: 'term' %>
      </div>
      <div class='col-8-24 bottom-spacer '>
        <%= f.text_field :name %>
      </div>
      <div class='col-9-24 bottom-spacer '>
        &nbsp;
      </div>

      <div class='grid-row col-4-24 bottom-spacer'>
        &nbsp;
      </div>
      <div class='col-3-24  bottom-spacer faded'>
        <%= f.label :charged_in %>
        <%= f.hidden_field :cycle_type, cycle_type: 'term' %>
      </div>
      <div class='col-4-24 bottom-spacer '>
        <%= f.label :charged_in_id, 'Advance', :value => ChargedInDefaults::MODERN_ADVANCE.to_s %>
      </div>
      <div class='col-4-24 bottom-spacer '>
        <%= f.label :charged_in_id, 'Arrears', :value => ChargedInDefaults::MODERN_ARREARS.to_s %>
      </div>
      <div class='col-9-24 bottom-spacer '>
        &nbsp;
      </div>

      <div class='grid-row col-4-24 bottom-spacer'>
        &nbsp;
      </div>
      <div class='col-3-24  bottom-spacer faded'>
        &nbsp;
      </div>
      <div class='col-2-24 bottom-spacer '>
        <%= f.radio_button :charged_in_id, ChargedInDefaults::MODERN_ADVANCE.to_s %>
      </div>
      <div class='col-2-24  bottom-spacer faded'>
        &nbsp;
      </div>
      <div class='col-2-24 bottom-spacer '>
        <%= f.radio_button :charged_in_id, ChargedInDefaults::MODERN_ARREARS.to_s %>
      </div>

      <div class='col-11-24 bottom-spacer '>
        &nbsp;
      </div>


      <div class='grid-row col-4-24 bottom-spacer'>
        &nbsp;
      </div>
      <div class='col-3-24  bottom-spacer faded'>
        <%= f.label :order %>
      </div>
      <div class='col-2-24 bottom-spacer '>
        <%= f.text_field :order, class: 'r-align'%>
      </div>
      <div class='col-15-24 bottom-spacer '>
        &nbsp;
      </div>

      <div class='grid-row col-24-24'>
        &nbsp;
      </div>

      <div class='js-group-toggle'>
        <div class='grid-row col-4-24 bottom-spacer '>
          &nbsp;
        </div>
        <div class='col-3-24 bottom-spacer  faded'>
          Due On
        </div>
        <div class='col-7-24 bottom-spacer faded c-align'>
          Due Dates
        </div>
        <div class='col-5-24 bottom-spacer faded c-align'>
          Shown Dates
        </div>
        <div class='col-5-24 bottom-spacer'>
          &nbsp;
        </div>

        <div class='grid-row col-7-24 bottom-spacer '>
          &nbsp;
        </div>
        <div class='col-2-24 bottom-spacer r-align faded'>
          Month
        </div>
        <div class='col-2-24 bottom-spacer r-align faded'>
          Day
        </div>
        <div class='col-2-24 bottom-spacer r-align faded'>
          Year
        </div>
        <div class='col-1-24 bottom-spacer faded r-align '>
          &nbsp;
        </div>
        <div class='col-2-24 bottom-spacer faded r-align '>
          Month
        </div>
        <div class='col-2-24 bottom-spacer faded r-align'>
          Day
        </div>
        <div class='col-6-24 bottom-spacer'>
          &nbsp;
        </div>
        <%= f.fields_for :due_ons do |builder| %>
          <div class='grid js-enclosed-toggle <%= "#{hide_extra_new_records record: builder.object, index: builder.index } " %>'>
            <div class='grid-row col-7-24'>
              &nbsp;
            </div>
            <div class='col-2-24'>
              <%= builder.text_field :month, class: 'r-align width-1-1 js-clear' %>
            </div>
            <div class='col-2-24'>
              <%= builder.text_field :day, class: 'r-align width-1-1 js-clear' %>
            </div>
            <div class='col-2-24 bottom-spacer'>
              <%= builder.text_field :year, class: 'r-align width-1-1 js-clear' %>
            </div>
            <div class='col-1-24 bottom-spacer  faded'>
              &nbsp;
            </div>
            <div class='col-2-24'>
              <%= builder.text_field :show_month, class: 'r-align width-1-1 js-clear' %>
            </div>
            <div class='col-2-24'>
              <%= builder.text_field :show_day, class: 'r-align width-1-1 js-clear' %>
            </div>
            <div class='col-2-24 bottom-spacer'>
              <%= builder.hidden_field :_destroy %>
              <%= link_to_if(!first_record?(index: builder.index), fa_icon('trash-o'), '#', class:"delete-button #{hide_or_destroy record: builder.object}", title: 'Delete Due Date') %>
            </div>
            <div class='col-4-24'>
              &nbsp;
            </div>
          </div>  <!-- js-enclosed-toggle -->
        <% end %>
        <div class='grid-row col-7-24 vertical-spacer'>
          &nbsp;
        </div>
        <div class='col-4-24 vertical-spacer'>
          <%= link_to fa_icon('plus-circle lg'), '#', class: 'js-reveal-link plain-button', title: 'Add Due Date' %>
        </div> <!-- end-row -->
      </div>  <!-- js-group-toggle -->
      <hr class = 'faded'>

      <div class='grid-row col-6-24  bottom-spacer no-print'>
        &nbsp;
      </div>
      <div class='col-18-24 no-r-pad  bottom-spacer no-print'>
        <%= render 'buttons/submit', f: f %> or <%= cancel_link path: cycles_path %>
     </div>
    </div>
  </fieldset>
<% end %>
