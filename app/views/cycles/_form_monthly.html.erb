<%= form_for cycle do |f| %>
  <%= render 'shared/errors', object: cycle %>

  <fieldset id='cycle' class='grid  shell-1-6'>

    <div class='col-22-24  grid-row  bottom-line-spacer  spacer-column'>
      <%= f.hidden_field :cycle_type, cycle_type: 'monthly' %>

      <div class='col-5-24  grid-row  bottom-spacer faded'><%= f.label :name %></div>
      <div class='col-10-24  bottom-spacer'><%= f.text_field :name %></div>

      <div class='col-5-24  grid-row  bottom-spacer  faded'>
        <%= f.label :charged_in %>
        <%= f.hidden_field :cycle_type, cycle_type: 'term' %>
      </div>
      <div class='col-3-24  bottom-spacer  faded'>
        <%= f.label :charged_in_id, 'Advance', value: ChargedInDefaults::MODERN_ADVANCE.to_s %>
      </div>
      <div class='col-2-24  bottom-spacer  faded'>
        <%= f.radio_button :charged_in_id, ChargedInDefaults::MODERN_ADVANCE.to_s %>
      </div>
      <div class='col-1-24  bottom-spacer'>
        &nbsp;
      </div>
      <div class='col-3-24  bottom-spacer  faded'>
        <%= f.label :charged_in_id, 'Arrears', value: ChargedInDefaults::MODERN_ARREARS.to_s %>
      </div>
      <div class='col-2-24  bottom-spacer  faded'>
        <%= f.radio_button :charged_in_id, ChargedInDefaults::MODERN_ARREARS.to_s %>
      </div>
      <div class='col-5-24  grid-row  bottom-spacer  faded'><%= f.label :order %></div>
      <div class='col-2-24  bottom-spacer '>
        <%= f.text_field :order, class: 'r-align'%>
      </div>

      <%= f.fields_for :due_ons, cycle.due_ons.first  do |builder| %>
        <div class='col-5-24  grid-row  bottom-spacer  faded'>Due On Day</div>
        <div class='col-2-24  bottom-spacer'>
          <%= builder.text_field :day, class: 'r-align' %>
        </div>
        <div class='col-1-24  bottom-spacer'>&nbsp;</div>
        <div class='col-5-24  bottom-spacer  faded'>Shown On Day</div>
        <div class='col-2-24  bottom-spacer'>
          <%= builder.text_field :show_day, class: 'r-align' %>
        </div>
      <% end %>

      <div class='col-5-24   grid-row  vertical-line-spacerf no-print'>&nbsp;</div>
      <div class='col-18-24  vertical-line-spacer no-r-pad  no-print'>
        <%= render 'buttons/submit', f: f %> or <%= cancel_link path: cycles_path %>
      </div>
    </div>
    <div class='col-2-24 spacer-column  bottom-line-spacer'>
      <%= view_link cycle, size: '2x' %>
    </div>
  </fieldset>
<% end %>
