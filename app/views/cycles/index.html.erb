<% @title='Cycles' %>

<div class='grid shell'>
  <div class='col-2-24  grid-row  bottom-spacer  grid-header'>
    &nbsp;
  </div>
  <div class='col-8-24  bottom-spacer  grid-header'>
    Name
  </div>
  <div class='col-3-24  bottom-spacer  grid-header  r-align'>
    Order
  </div>
  <div class='col-4-24  bottom-spacer  grid-header'>
    Type
  </div>
  <div class='col-4-24  bottom-spacer  grid-header  no-print'>
    Actions
  </div>
  <div class='col-3-24  bottom-spacer  grid-header'>
    &nbsp;
  </div>

  <% @cycles.each do |cycle| %>
    <div title='View' class='table-row' data-link='<%= cycle_path(cycle) %>'>
      <div class='col-2-24  grid-row  bottom-spacer inherit-row'>
        &nbsp;
      </div>
      <div class='col-8-24  bottom-spacer  inherit-row'>
       <%= cycle.name %>
      </div>
      <div class='col-3-24  bottom-spacer  inherit-row  r-align'>
       <%= cycle.order %>
      </div>
      <div class='col-4-24  bottom-spacer  inherit-row'>
        <%= cycle.cycle_type %>
      </div>
      <nav class='col-2-24  bottom-spacer  no-print'>
        <%= edit_link cycle %>
      </nav>
      <nav class='col-2-24  bottom-spacer  no-print'>
        <%= delete_link path: cycle %>
      </nav>
      <div class='col-3-24  bottom-spacer  no-print'>
        &nbsp;
      </div>
    </div>
  <% end %>
</div>
