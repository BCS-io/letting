<% count = 0 %>
<%= f.fields_for :guides do |f| %>
  <hr>
  <div class='grid'>
    <div class='col-1-6  grid-row  vertical-line-spacer  faded'>
        <%= f.label :instruction %> <%= "#{count += 1}" %>
    </div>
    <div class='col-3-4  vertical-line-spacer'>
      <%= f.text_field :instruction %>
    </div>
    <div class='col-1-4  vertical-line-spacer  faded'>
      <%= f.label :fillin, 'Fill In and Example' %>
    </div>
    <div class='col-1-4  vertical-line-spacer  faded'>
      <%= f.text_field :fillin %>
    </div>
    <div class='col-1-4  vertical-line-spacer'><%= f.text_field :sample %></div>
  </div>
<% end %>
<hr>
