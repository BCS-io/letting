<% count = 0 %>
<%= f.fields_for :guides do |f| %>
  <hr>
  <div class='grid'>
    <div class='col-6-24  grid-row  vertical-line-spacer  faded  required'>
        <%= f.label :instruction %> <%= "#{count += 1}" %>
    </div>
    <div class='col-18-24  vertical-line-spacer'>
      <%= f.text_field :instruction %>
    </div>
    <div class='col-6-24  grid-row  vertical-line-spacer  faded  required'>
      <%= f.label :fillin, 'Fill In & Example' %>
    </div>
    <div class='col-11-24  vertical-line-spacer  faded'>
      <%= f.text_field :fillin %>
    </div>
    <div class='col-6-24  vertical-line-spacer  no-r-pad'><%= f.text_field :sample %></div>
  </div>
<% end %>
<hr>
