<% count = 0 %>
<%= f.fields_for :guides do |f| %>
  <hr>
  <div class='grid'>

    <div class='col-4-24  grid-row  vertical-line-spacer  faded'>
        <%= f.label :instruction %> <%= "#{count += 1}" %>
    </div>
    <div class='col-20-24  vertical-line-spacer'>
      <%= f.text_field :instruction %>
    </div>
    <div class='col-6-24  grid-row  vertical-line-spacer  faded'>
      <%= f.label :fillin, 'Fill In and Example' %>
    </div>
    <div class='col-9-24  vertical-line-spacer  faded'>
      <%= f.text_field :fillin %>
    </div>
    <div class='col-8-24  vertical-line-spacer'><%= f.text_field :sample %></div>
  </div>
<% end %>
<hr>
