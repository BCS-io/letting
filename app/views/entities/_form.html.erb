<div class='js-group-toggle'>
  <%= render 'entities/header' %>
  <%= f.fields_for :entities do |builder| %>
    <div id='<%= entity_field_id(entitieable, builder.index) %>' class='js-enclosed-toggle <%= "#{hide_extra_new_records record: builder.object, index: builder.index} " %>' >
      <div class='col-6-24  grid-row  bottom-spacer  spec-entity-count'>
        <%= builder.text_field :title, class: 'js-clear  width-1-1' %>
      </div>

      <div class='col-5-24  bottom-spacer'>
        <%= builder.text_field :initials, class: 'js-clear  width-1-1' %>
      </div>
      <div class='col-11-24  bottom-spacer'>
        <%= builder.text_field :name, class: 'js-clear  width-1-1' %>
      </div>
      <div class='col-2-24  bottom-spacer  no-r-pad'>
        <%= builder.hidden_field :_destroy %>
        <% if first_record? index: builder.index %>
          <%= link_to fa_icon('trash-o'), '#', class:"plain-button  float-right", title: 'Delete Person (disabled)', disabled: true %>
        <% else %>
          <%= link_to fa_icon('trash-o'), '#', class:"plain-button #{hide_or_destroy record: builder.object}  float-right", title: 'Delete Person' %>
        <% end %>
      </div>
    </div> <!-- js-enclosed-toggle -->
  <% end %>
  <div class='col-3-24  grid-row  bottom-spacer'>
    <%= add_link css: 'js-reveal-link  float-left', title: 'Add Person' %>
  </div>
</div> <!-- js-group-toggle -->
