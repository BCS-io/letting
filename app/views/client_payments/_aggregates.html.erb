<div class='col-1-6  grid-row'>
  &nbsp;
</div>
<div class='col-2-6  grid-label  c-align'>
  Mar/Sep
</div>
<div class='col-2-6  grid-label  c-align'>
  Jun/Dec
</div>


<div class='col-1-12  grid-row  grid-header  bottom-spacer'>
  Year
</div>
<div class='col-2-12  grid-header  bottom-spacer  r-align'>
  Mar
</div>
<div class='col-2-12  grid-header  bottom-spacer  r-align'>
  Sep
</div>
<div class='col-2-12  grid-header  bottom-spacer  r-align'>
  Jun
</div>
<div class='col-2-12  grid-header  bottom-spacer  r-align  no-r-pad'>
  Dec
</div>

<% client_payment.years.each do |year| %>
  <div class='col-1-12  grid-row  bottom-spacer'>
    <%= year %>
  </div>
  <div class='col-2-12  bottom-spacer  r-align'>
    <%= link_to to_decimal(client_payment.period_total(year: year, month: 3)), payments_itemized_client_path(client_payment.client_id, year: year, month: 3), method: :patch, remote: true  %>
  </div>
  <div class='col-2-12  bottom-spacer  r-align'>
    <%= link_to to_decimal(client_payment.period_total(year: year, month: 9)), payments_itemized_client_path(client_payment.client_id, year: year, month: 9), method: :patch, remote: true %>
  </div>
  <div class='col-2-12   bottom-spacer  r-align'>
    <%= link_to to_decimal(client_payment.period_total(year: year, month: 6)),  payments_itemized_client_path(client_payment.client_id, year: year, month: 6), method: :patch, remote: true %>
  </div>
  <div class='col-2-12  bottom-spacer  r-align  no-r-pad'>
    <%= link_to to_decimal(client_payment.period_total(year: year, month: 12)), payments_itemized_client_path(client_payment.client_id, year: year, month: 12), method: :patch, remote: true  %>
  </div>
<% end %>
<div class='col-9-12  r-align  grid-footer-number  no-r-pad'>
  &nbsp;
</div>
