<div class='js-toggle-selection'>
  <div class='col-6-24 vertical-spacer grid-header faded no-r-pad'>
    Title
  </div>
  <div class='col-5-24 vertical-spacer grid-header faded no-r-pad'>
    Initials
  </div>
  <div class='col-11-24 vertical-spacer grid-header faded no-r-pad'>
    Name
  </div>
  <div class='col-2-24 vertical-spacer grid-header faded no-r-pad'>
    Do
  </div>
  <% entitieable.entities.each.with_index do |entity, index| %>
    <%= f.fields_for :entities, entity do |builder| %>
      <%= render 'shared/entity', f: builder, entitieable: entitieable, entity: entity, index: index %>
    <% end %>
  <% end %>
  <div class='col-1-1 vertical-spacer'>
    <%= link_to fa_icon('plus lg'), '#', class: 'js-reveal-link', title: 'Add Person' %>
  </div>
</div>
