  <div class='reveal-parent'>
    <% entitieable.entities.each.with_index do |entity, index| %>
      <%= f.fields_for :entities, entity do |builder| %>
        <fieldset id='<%= entity_field_id entitieable, index %>'
          class='<%= "#{hide_new_record_unless_first entity, index} " + \
                      "#{destroyable entity, index }" %>' >
          <%= render partial: 'shared/entity', locals: { f: builder, record: entity, index: index } %>
        </fieldset>
      <% end %>
    <% end %>
    <%= link_to 'Add Person', '#', class: 'reveal-link' %>
  </div>
