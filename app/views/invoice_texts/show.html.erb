<% @title='View Invoice Text' %>
<div id='invoice_text'  class='shell-1-12'>
  <div class='col-12-24  bottom-spacer'>
    &nbsp;
  </div>
  <div class='col-12-24  bottom-spacer'>
    <%= edit_link @invoice_text, size: '2x' %>

  </div>

  <% if @invoice_text == InvoiceText.first %>
    <%= render 'page1', invoice_text_page1: @invoice_text %>
  <% else %>
    <%= render 'page2', invoice_text_page2: @invoice_text %>
  <% end %>
</div>
