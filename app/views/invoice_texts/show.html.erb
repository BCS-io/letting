<% @title='View Invoice Text' %>
<%= render 'bubbles/search_account' %>

<div id='invoice_text'  class='Shell  u-padding-1-12'>

  <div class='col-23-24  bottom-spacer  Bubble-search'>
    &nbsp;
    <%= render 'bubbles/help_main',  content: 'invoice text',  line1: 'The Invoice Text View',  line2: 'The text details of the page are shown here. These are the hard coded texts used on the invoice page.', line3: 'The print button, at the top right-hand corner, will print out this screen. The edit button takes you through to the edit form.',  line4: 'The search box at the top of the page is for account searches.'%>
  </div>

  <div class='col-1-24  bottom-spacer'>
    <%= edit_link @invoice_text %>
    <div  id='help-me',  data-summit='3',  class='Bubble-point-right'>
      <%= render 'bubbles/help_2',  pic: 'fa fa-edit  fa-lg',  line1:'Invoice Text Edit Button', line2: "Use to edit this page's details" %>
    </div>
  </div>

  <% if @invoice_text.page1? %>
    <%= render 'page1', invoice_text_page1: @invoice_text %>
  <% else %>
    <%= render 'page2', invoice_text_page2: @invoice_text %>
  <% end %>
</div>
