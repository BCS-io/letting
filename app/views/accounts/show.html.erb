<article>
    <div class = 'showbox'>
    <h2>Property Id: </span>
      <%= @property.human_ref %>
      <span class= 'floatright'><%= link_to 'List', accounts_path %><span>
    </h2>
    <p>
     <span class= 'boldfloat'>Client Id: </span>
     <%= @property.client_ref %>
    </p>
    <p>
      <h3> Occupier</h3>
      <% @property.entities.each do |entity| %>
        <%= render 'shared/show_entity', object: entity %>
      <% end %>
    </p>
    <p>
      <h2>Address</h2>
      <%= render 'shared/show_1_line_address', object: @property %>
    </p>
    <p>
      <%= render 'show_billing_profile', object: @property.billing_profile %>
      <%= render 'show_charges', object: @property.account.charges %>
    </p>
  </div>
  <div class='toggle-selection'>
    <div class='togglable'>
      <%= link_to 'Full Accounts', '#', class: 'toggle toggle-event' %>
       <%= render 'show_accounts', items: AccountDecorator.new(@property.account).abbrev_items %>
    </div>
    <div class='togglable hidden'>
      <%= link_to 'Partial Accounts', '#', class: 'toggle toggle-event' %>
      <%= render 'show_accounts', items: AccountDecorator.new(@property.account).items %>
    </div>
  </div>
  <p>
    <button> <%= link_to 'Print This Page', '#', class: 'print-window'%></button>
  </p>
 </article>
