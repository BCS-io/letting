<table>
  <thead>
    <tr>
      <th>
      </th>
      <th>
        Charge
      </th>
      <th>
        Date
      </th>
      <th>
        Amount
      </th>
      <th class='alnright'>
        ID
      </th>
       <th>
        Name
      </th>
      <th class='alnright'>
        No
      </th>
      <th>
        House
      </th>
    </tr>
  </thead>
  <tbody>
    <% properties.each do |property| %>
      <% property.account.new_debts.each do |debt| %>
      <tr>
        <td>
          <%= check_box_tag 'property_ids[]', property.id %>
        </td>
        <td>
          <%= debt.charge.charge_type %>
        </td>
        <td>
          <%= debt.on_date %>
        </td>
        <td>
          <%= debt.amount %>
        </td>
        <td class='alnright'>
          <%= link_to property.human_id, edit_property_path(property) %>
        </td>
        <td>
          <%= format_empty_string_as_dash property.entities.first.name %>
        </td>
        <td class='alnright'>
          <%= format_empty_string_as_dash property.address.flat_no %>
        </td>
        <td>
          <%= format_empty_string_as_dash property.address.house_name %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>