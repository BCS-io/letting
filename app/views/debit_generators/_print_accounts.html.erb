  <% dotted_line = "----------" %>
  <% total = 0 %>
  <table>
    <thead>
      <tr>
        <td>
          Date
        </td>
         <td>
          Description
        </td>
        <td class='alnright'>
          Amount Due
        </td>
        <td class='alnright'>
          Balance Owing
        </td>
      </tr>
    </thead>
    <tbody>
      <% items.each do |item| %>
        <% if item.due != 0 %>
          <tr>
            <td>
             <%= item.date %>
            </td>
            <td>
             <% if item.charge_type == 'Balance carried forward' %>
             Arrears
             <% else %>
              <%= item.charge_type %>
              <% end %>
            </td>
            <td>
            </td>
            <td class='alnright'>
             <%= item.due %>
            </td>
             <td class='alnright'>
              <%= number_with_precision(total = total + item.balance,precision: 2) %>
            </td>
          </tr>
        <% end %>
      <% end %>
          <tr>
            <td>
            </td>
            <td>
            </td>
            <td>
            </td>
            <td class='alnright'>
            </td>
            <td class='alnright'>
               <%= "#{dotted_line}" %>
            </td>
          </tr>
         <tr>
            <td>
            </td>
            <td>
         Total now Owing
            </td>
            <td>
            </td>
            <td class='alnright'>
            </td>
             <td class='alnright'>
              <%= number_with_precision(total,precision: 2) %>
            </td>
          </tr>
    </tbody>

  </table>
  <p>
  </p>


