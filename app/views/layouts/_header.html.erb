<header>
  <div class='grid  grid-pad'>

    <div class='col-6-24  grid-row'>
      <h2><%= link_to 'Adams Lettings', root_path, class: 'hover-link inverted-link' %></h2>
    </div>

    <div class='col-10-24'>
      <div class='form-wrapper  clearfix'>
          <%= form_tag search_path, method: 'get' do %>
          <%= text_field_tag :search_terms, params[:search_terms], placeholder: 'Search here...', title: 'Search', data: {autocomplete_source: search_path}, autofocus:true %>
          <button type='submit' id='search' title='Search'>
            <%= fa_icon('search lg') %>
          </button>
          <% if controller.new_invoicing? %>
            <%= render 'invoicings/search' %>
          <% end %>
        <% end %>
      </div>
    </div>

    <nav class='col-8-24  r-align  no-r-pad'>
      <div class='my-menu-wrapper  clearfix'>
        <ul class='my-menu'>
          <% if current_user %>
            <li>
              <a href='#'>
                <%= fa_icon 'print  lg', title: 'Print', class: 'js-print  inverted-link' %>&nbsp;Print
              </a>
            </li>
            <li><a href="#">
                  <%= fa_icon 'user lg', title: 'User', class: '' %>&nbsp;
                  <%= current_user.nickname %>
                </a>
              <ul class='my-sub-menu'>
                <li>
                  <a href='<%= logout_path %>'>
                    logout&nbsp;&nbsp;<%= fa_icon('sign-out  lg') %>
                  </a>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
               <%= link_to fa_icon('sign-in  lg'), logout_path, title: 'Log In', class: 'inverted-link  r-pad' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
