<header>
  <div class='grid  grid-pad'>

    <div class='col-6-24  grid-row'>
      <h2><%= link_to fa_icon('home', text: 'Letting'), root_path, class: 'hover-link inverted-link' %></h2>
    </div>

    <div class='col-10-24'>
      <div class='form-wrapper  clearfix'>
          <%= form_tag search_path, method: 'get' do %>
          <%= text_field_tag :search_terms, params[:search_terms], placeholder: 'Search here...', title: 'Search', data: {autocomplete_source: search_path}, autofocus:true %>
          <button type='submit' id='search' title='Search'>
            <%= fa_icon('search lg') %>
          </button>
        <% end %>
      </div>
    </div>

    <nav class='col-8-24  r-align  no-r-pad'>
      <div class='my-menu-wrapper  clearfix'>
        <ul class='my-menu'>
          <% if current_user %>
            <li>
              <%= link_to fa_icon('print lg', text: 'Print'), '#', class: 'js-print' %>
            </li>
            <li>
              <%= link_to fa_icon('user lg', text: current_user.nickname, title: 'User'), '#' %>
              <ul class='my-sub-menu'>
                <li>
                  <%= link_to fa_icon('sign-out  lg', text: 'logout'), logout_path %>
                </li>
              </ul>
            </li>
          <% else %>
            <li>
               <%= link_to fa_icon('sign-in  lg', text: 'Log In'), logout_path, title: 'Log In' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</header>
