<% flash.each do |key, value| %>
  <div class="js-slow-time flash <%= key %>">
    <% case key.to_sym %>
    <% when :save %>
      <%= fa_icon 'save lg', title: 'save' %>
    <% when :good %>
      <%= fa_icon 'info lg', title: 'Information' %>
    <% when :problem %>
      <%= fa_icon 'question lg', title: 'Problem' %>
    <% when :delete %>
      <%= fa_icon 'trash lg', title: 'delete' %>
    <% else  %>
      <%= fa_icon 'frown-o lg', title: 'Unknown' %>
    <% end  %>
    &nbsp;<%= content_tag(:message, value) %>
  </div>
<% end %>
