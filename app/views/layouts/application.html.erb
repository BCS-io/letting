<!DOCTYPE html>
<html>
  <%= render 'layouts/head', title: @title %>
  <body>

    <%= render 'layouts/header' %>
    <%= render 'layouts/flashes' %>
    <div class='page-wrapper'>
      <div class='grid'>
        <article class='col-21-24'>
          <h2><%= @title %> <span class = 'print-only'><%= "#{safe_date(date: Time.zone.today, format: :short)}"%></span> </h2>
          <%= yield %>
        </article>
        <aside class='col-3-24  no-r-pad'>
          <%= render 'layouts/sidebar' %>
        </aside>
      </div>
    </div>
    <%= render 'layouts/footer' %>

  </body>
</html>
