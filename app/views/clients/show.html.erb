<% @title='View Client' %>

<div class='grid  shell'>
  <div class='col-1-24  grid-row  vertical-spacer'>
    &nbsp;
  </div>
  <div class='col-14-24  vertical-spacer'>
    <div class='col-6-24  grid-row  bottom-spacer faded'>
      Client ID
    </div>
    <div class='col-18-24  bottom-spacer'>
      <%= @client.human_ref %>
    </div>
    <div class='col-6-24  grid-row  bottom-spacer  faded'>
      Name
    </div>
    <div class='col-18-24  bottom-spacer'>
      <%= @client.entities.full_name %>
    </div>
    <div class='col-6-24  grid-row  bottom-spacer  faded'>
      Address
    </div>
    <div class='col-18-24  bottom-spacer'>
      <%= simple_format(@client.address.text, {}, wrapper_tag: 'div') %>
    </div>
    <div class='col-1-1  grid-row  vertical-spacer  faded'>
      Properties Owned
    </div>

    <div class='col-3-24  grid-row  bottom-spacer  grid-header r-align'>
      ID
    </div>
    <div class='col-3-24  grid-header  bottom-spacer  r-align'>
       No
    </div>
    <div class='col-7-24  grid-header  bottom-spacer'>
      Address
    </div>
    <div class='col-5-24  grid-header  bottom-spacer'>
      Town
    </div>


    <% if @client.properties.any? %>
      <% @client.properties.each do |property| %>
       <div title='View' class='table-row' data-link='<%= property_path(property) %>'>
        <div class='col-3-24  grid-row  bottom-spacer  inherit-row  r-align'>
           <%= property.human_ref %>
        </div>
        <div class='col-3-24  bottom-spacer  inherit-row  r-align'>
          <%= format_empty_string_as_dash property.address.first_no %>
        </div>
        <div class='col-7-24  bottom-spacer  inherit-row'>
          <%= format_empty_string_as_dash property.address.first_text %>
        </div>
        <div class='col-6-24  bottom-spacer  inherit-row  nowrap'>
          <%= property.address.town %>
        </div>
         </div>
        <div class='col-5-24  bottom-spacer  no-print'>&nbsp;</div>
      <% end %>
    <% else %>
      <div class='col-1-1  grid-row  vertical-spacer'>
        The Client has no tenants.
      </div>
    <% end %>
  </div>
  <div class='col-9-24  vertical-spacer'>
    <%= edit_link @client, size: '2x' %>
  </div>
</div>
