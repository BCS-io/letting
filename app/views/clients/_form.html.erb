<%= form_for client do |f| %>
  <%= render 'shared/errors', object: client %>
  <fieldset id='client' class='shell'>
    <h3>Client
       <span class='link-button'>
        <%= link_to 'View', client_path(client) %>
      </span>
    </h3>
    <div class='field text half'>
      <%= f.label :human_ref, 'Client ID', class: 'required' %>
      <%= f.text_field :human_ref, autofocus:true %>
    </div>
    <%= render 'shared/entities', f: f, entitieable: client %>
    <%= render 'shared/address', f: f, parent: 'client' %>
  </fieldset>
  <div>
    <%= f.submit %> or <%= link_to 'Cancel', clients_path, class: 'warn' %>
  </div>
<% end %>
