<%= form_for client do |f| %>
  <%= render 'shared/errors', object: client %>

  <fieldset id='client' class='grid  shell'>
    <div class='col-1-2  grid-row'>&nbsp;</div>
    <div class='col-1-2  no-r-pad'><%= view_link(client) %></div>

    <div class='col-1-4  grid-row  bottom-spacer'>
      <%= f.label :human_ref, 'Client ID', class: 'required' %>
    </div>
    <div class='col-3-4  bottom-spacer  no-r-pad'>
      <%= f.text_field :human_ref, autofocus:true %>
    </div>

    <div class='col-4-4  grid-row  bottom-spacer  no-r-pad'>
      <%= render 'entities/form', f: f, entitieable: client %>
      <hr>
      <%= render 'addresses/form', f: f, parent: 'client', address: AddressDecorator.new(client.address) %>
    </div>
    <hr>
    <div class='col-1-4  gird-row  no-print'>&nbsp;</div>
    <div class='col-3-4  no-print  no-r-pad '>
      <%= render 'buttons/submit', f: f %>  or <%= link_to 'Cancel', clients_path, class: 'warn' %>
    </div>
  </fieldset>
<% end %>
