
<%= form_for sheet do |f| %>

  <fieldset id='sheet' class='shell'>
    <%= render 'text_fields', f: f, parent: 'sheet', sheet: sheet %>

    <% if sheet.id == 1 %>
      <%= render 'addresses/form', f: f, parent: 'sheet', address: AddressDecorator.new(sheet.address) %>
    <% end %>

      <div class='col-1-4 no-print'>
        &nbsp;
      </div>

    <div class=' col-3-4 no-r-pad no-print'>
      <%= f.submit class: 'primary  simple-button' %> or <%= link_to 'Cancel', sheets_path, class: 'warn' %>
    </div>
  </fieldset>
<% end %>
