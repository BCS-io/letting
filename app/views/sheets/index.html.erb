<% @title='Sheets' %>

<div class='grid shell'>

  <% if @sheets.present? %>
    <div class='col-1-4 vertical-spacer grid-header r-align'>
      Page number
    </div>
    <div class='col-1-4 grid-header'>
      Contains
    </div>
    <div class='col-1-4 grid-header'>
      Actions
    </div>

    <% @sheets.each do |sheet| %>
      <div class='table-row' data-link='<%= sheet_path(sheet.id) %>'>

      <div class='col-1-4 vertical-spacer inherit-row grid-row r-align'>
        <%= sheet.id %>
      </div>
      <div class='col-1-4 vertical-spacer inherit-row'>
       <%= sheet.description %>
      </div>
      <div>
        <nav class='col-1-4 vertical-spacer'>
<%= link_to fa_icon('edit lg'), edit_sheet_path(sheet), title: 'Edit', class: 'r-pad icon-large' %>

<%= link_to fa_icon('file lg'), sheet_path(sheet), title: 'View', class: 'r-pad icon-large' %>

        </nav>
      </div>
    </div>
    <% end %>
  <% else %>
    No Pages Found
  <% end %>

</div>
