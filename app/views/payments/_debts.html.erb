<div class = 'showbox'>
  <p>
    Debts
  </p>
  <table>
    <thead>
      <tr>
        <th>
          Date Due
        </th>
         <th>
          Charge Type
        </th>
        <th class='alnright'>
          Amount
        </th>
      </tr>
    </thead>
    <tbody>
      <% @property.account.unpaid_debts.each do |debt| %>
      <tr>
        <td>
            <%= l debt.on_date %>
        </td>
        <td>
            <%= debt.charge.charge_type %>
        </td>
        <td class='alnright'>
          <%= debt.amount %>
        </td>
      </tr>
       <% end %>
    </tbody>
  </table>
 </div>