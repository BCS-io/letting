<% @title='View Payment' %>
<% payment = @payment %>
<fieldset id='payment' class='grid  shell  overlay-parent'>
  <div class='col-3-12'>
    <h2>Property</h2>
    <h1>ID: <%= payment.human_ref %></h1>
  </div>
  <div class='col-6-12'>
    <div class='col-1-1  grid-row  vertical-line-spacer'></div>
    <%= render 'addresses/abridged', property: payment.property_decorator %>
  </div>
  <div class='col-1-12'>
    &nbsp;
  </div>
  <div class='col-1-12'>
    <%= edit_link @payment, size: '2x' %>
  </div>
  <div class='col-1-12'>
    <%= payment_link path: new_payment_path(id: payment.account.id), size: '2x' %>
  </div>
  <div class='col-1-1  grid-row'><hr/></div>
  <div class='col-1-1  grid-row'><h2>Payment Received</h2></div>
  <div class='col-6-24  grid-row  grid-header'>Type</div>
  <div class='col-9-24  grid-header'>Booked On</div>
  <div class='col-1-24  grid-header  pick-out'>&nbsp;</div>
  <div class='col-8-24  grid-header  pick-out'>Payment Amount</div>

  <div class='col-6-24  grid-row  cell'>Cheque</div>
  <div class='col-9-24  cell'>
    <%= l payment.booked_on, format: :human %>
  </div>
  <div class='col-1-24  cell  pick-out'>&nbsp;</div>
  <div class='col-8-24  cell  pick-out'>
    <h1><%= fa_icon('certificate') %>&nbsp;Paid</h1>
    &nbsp; <%= text_field_tag 'Paid','Paid' %>
  </div>

  <div class='js-totalizer'>
    <%= render 'credits/credits', payment: payment  %>

    <div class='col-12-24 grid-row'>&nbsp;</div>
    <div class='col-3-24  cell  r-align'><h3>Total</h3></div>
    <div class='col-1-24  cell  pick-out'>&nbsp;</div>
    <div class='col-7-24  cell  r-align pick-out'>
      <%= text_field_tag '', number_with_precision(payment.amount, precision: 2), disabled: true, class: 'r-align' %>
    </div>
    <div class='col-1-24  cell  pick-out'>&nbsp;</div>
  </div>  <!-- js-totalizer -->
</fieldset>
