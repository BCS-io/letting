<% @title='View Payment' %>
<% payment_dec = @payment %>

<fieldset id='payment'  class='grid  shell-thin  overlay-parent'>

  <div class='col-12-24  grid-row  vertical-spacer'>
    <%= render 'payments/property_hero', payment_dec: payment_dec %>
  </div>
  <div class='col-4-24'>
        &nbsp;
  </div>
  <div class='col-5-24  top-spacer  vertical-spacer'>&nbsp;</div>
  <div class='col-3-24  top-spacer  vertical-spacer'><%= edit_link @payment, size: '2x' %></div>

  <%= render 'payments/received_header' %>

  <div class='col-1-24  grid-row  cell  pick-out'>&nbsp;</div>
  <div class='col-12-24  cell  pick-out'><%= payment_dec.booked_on_dec %></div>
  <div class='col-3-24  cell  pick-out'>&nbsp;</div>
  <div class='col-8-24  cell  pick-out'>
    <h1><%= fa_icon('certificate') %>&nbsp;Paid</h1>
    &nbsp; <%= text_field_tag 'Paid','Paid' %>
  </div>

  <div class='js-totalizer'>
    <%= render 'credits/credits', credits_dec: payment_dec.credits_decorated  %>

    <div class='col-12-24  grid-row'>&nbsp;</div>
    <div class='col-3-24  cell  r-align'><h3>Total</h3></div>
    <div class='col-1-24  cell  pick-out'>&nbsp;</div>
    <div class='col-7-24  cell  r-align  pick-out'>
      <%= text_field_tag '', payment_dec.amount, disabled: true, class: 'r-align' %>
    </div>
    <div class='col-1-24  cell  pick-out'>&nbsp;</div>

    <!-- acts as padding on the bottom of the form -->
    <div class='col-15-24  grid-row'>&nbsp;</div>
    <div class='col-9-24  pick-out'>&nbsp;</div>
  </div>  <!-- js-totalizer -->
</fieldset>
