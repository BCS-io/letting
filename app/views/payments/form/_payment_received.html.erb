<hr/>
<h2>Payment Received</h2>
<div class="grid">
  <div class="col-6-24 grid-header">
    Type
  </div>
  <div class="col-9-24 grid-header">
    Paid On
  </div>
  <div class="col-1-24 grid-header pick-out">
    &nbsp;
  </div>
  <div class="col-8-24 grid-header pick-out">
    Payment Amount
  </div>

  <div class="col-6-24 cell">
    <%= payment_form.label 'Cheque' %>
  </div>
  <div class="col-9-24 cell">
    <%= payment_form.date_field :on_date, disabled: true %>
  </div>
  <div class="col-1-24 cell pick-out">
    &nbsp;
  </div>
  <div class="col-8-24 cell pick-out">
    <%= payment_form.hidden_field :account_id %>
    <%= payment_form.submit name: 'create', autofocus:true , class: 'simple-button' %>
  </div>
</div>