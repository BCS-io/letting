<h3>Unpaid Debits</h3>
<div class="grid container totalizer">
  <div class="col-1-4 grid-header">
    Charge
  </div>
  <div class="col-1-4 grid-header">
    Due On
  </div>
  <div class="col-1-8 grid-header number">
    Owed
  </div>
  <div class="col-3-8 grid-header pick-out">
    Payed
  </div>
  <% if @payment.required? %>
    <% @payment.credits.each do |credit| %>
      <%= payment_form.fields_for :credits, credit do |credit_form| %>
        <%= render 'credit', credit_form: credit_form, credit: credit %>
      <% end %>
    <% end %>
    <div class="col-1-2">
      &nbsp;
    </div>
    <div class="col-1-8 body">
      Total
    </div>
    <div class="col-3-8 body pick-out">
      <%= payment_form.text_field :amount, readonly: true, class: 'total number' %>
    </div>
  <% else %>
    Debit Free
  <% end %>
</div>