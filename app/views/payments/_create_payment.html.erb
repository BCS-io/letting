<div class='top'></div>
<h2>Property</h2>
<div class='blank_slate_parent'>
<% if @payment.present? %>
  <%= render 'address', property: PropertyDecorator.new(@payment.account.property) %>
  <% if @payment.required? %>
    <%= render 'payment_received', payment_form: payment_form  %>
    <%= render 'credits', payment_form: payment_form  %>
  <% else %>
  <div class='blank_slate_overlay'>
    <%= t('instruction.payments.property_no_debt') %>
  </div>
  <% end %>
<% else %>
 <div class='blank_slate_overlay'>
   <%= t('instruction.payments.property_payment') %>
   <%= link_to '109', new_payment_path(human_id: 109) %>
  </div>
<% end %>
</div>
<div>
  <%= payment_form.submit 'payment', name: 'create' , disabled: !@payment.required?, class: 'medium' %>&nbsp;&nbsp;
  <%= link_to_if @payment.required? ,' or Cancel', payments_path, class: 'alternative-choice' %>
</div>
