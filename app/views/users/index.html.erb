<% @title='Users' %>

<div class='grid  shell-1-12'>

  <div class='col-4-24  grid-row  bottom-spacer  grid-header'>Nickname</div>
  <div class='col-11-24 bottom-spacer  grid-header'>email</div>
  <div class='col-3-24  bottom-spacer  grid-header'>Admin</div>
  <div class='col-6-24  bottom-spacer  grid-header  no-print'>Actions</div>

  <% @users.each do |user| %>
    <div title='View' class='table-row' data-link='<%= user_path(user) %>'>

      <div class='col-4-24  grid-row  bottom-spacer  inherit-row'>
        <%= user.nickname %>
      </div>
      <div class='col-11-24  bottom-spacer  inherit-row'><%= user.email %></div>
      <div class='col-3-24  bottom-spacer  inherit-row'>
        <% if user.admin %>
          Yes
        <% else %>
          No
        <% end %>
        <%= testing_link path: user_path(user) %>
      </div>
    </div>
    <div class='col-1-24  bottom-spacer'><%= edit_link user, size: 'lg' %></div>
    <div class='col-1-24  bottom-spacer'>&nbsp;</div>
    <div class='col-1-24  bottom-spacer'><%= delete_link path: user %></div>
    <div class='col-3-24  bottom-spacer'>&nbsp;</div>
  <% end %>
</div>
