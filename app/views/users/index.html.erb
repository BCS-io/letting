<% @title='Users' %>

<div class='grid shell'>

  <div class='col-1-6 vertical-spacer grid-header r-align'>
    ID
  </div>
  <div class='col-1-6 vertical-spacer grid-header '>
    Nickname
  </div>
  <div class='col-1-6 vertical-spacer grid-header'>
   email
  </div>
  <div class='col-1-6 vertical-spacer grid-header r-align'>
   Admin
  </div>
  <div class='col-1-3 vertical-spacer grid-header no-print r-align'>
    Actions
  </div>

  <% @users.each do |user| %>
    <div class='table-row' data-link='<%= user_path(user) %>'>

      <div class='col-1-6 vertical-spacer grid-row r-align inherit-row'>
        <%= user.id %>
      </div>
      <div class='col-1-6 vertical-spacer inherit-row'>
       <%= user.nickname %>
      </div>
      <div class='col-1-6 vertical-spacer inherit-row'>
       <%= user.email %>
      </div>
      <div class='col-1-6 vertical-spacer r-align inherit-row'>
        <% if user.admin %>
          Yes
        <% else %>
          No
        <% end %>
        <%= link_to '.', user_path(user), class: 'view-testing-link' %>
      </div>
      <nav class='col-1-3 vertical-spacer r-align'>
        <%= link_to fa_icon('edit'), edit_user_path(user), title: 'Edit', class: 'r-pad'  %>
        <%= link_to fa_icon('trash-o'), user, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete', class: 'l-pad' %>
      </nav>
    </div>
  <% end %>
</div>
