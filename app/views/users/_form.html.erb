<%= form_for user do |f| %>
  <%= render 'shared/errors', object: user %>

  <fieldset id='user' class='shell'>

    <div class="grid">
      <div class='col-1-2 bottom-spacer'>
        <h2>User</h2>
      </div>
      <div class='col-1-2 bottom-spacer'>
        <%= view_link(user) %>
      </div>
    </div>

    <div class="grid">

      <div class='col-1-4 bottom-spacer'>
       <%= f.label :nickname %>
      </div>
      <div class='col-3-4 bottom-spacer'>
        <%= f.text_field :nickname %>
      </div>
      <div class='col-1-4 bottom-spacer'>
       <%= f.label :email %>
      </div>
      <div class='col-3-4 bottom-spacer'>
        <%= f.text_field :email %>
      </div>
      <div class='col-1-4 bottom-spacer'>
       <%= f.label :password %>
      </div>
      <div class='col-3-4 bottom-spacer'>
       <%= f.password_field :password %>
      </div>
      <div class='col-1-4 bottom-spacer'>
       <%= f.label :password_confirmation %>
      </div>
      <div class='col-3-4 bottom-spacer'>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class='col-1-4 bottom-spacer'>
        <%= f.label :admin, 'Admin Status' %>
      </div>
      <div class='col-3-4 bottom-spacer'>
        <%= f.check_box :admin %>
      </div>

    </div>

    <hr>
    <div class='col-1-4 no-print'>
      &nbsp;
    </div>
    <div class='col-3-4 no-r-pad no-print'>
      <%= f.button submit: '', class: "primary submit-button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating User..."} %> or <%= link_to 'Cancel', users_path, class: 'warn' %>
    </div>

  </fieldset>
<% end %>
