<%= form_for user do |f| %>
  <%= render 'shared/errors', object: user %>

  <fieldset id='user' class='grid  shell-1-6'>
    <div class='col-22-24  vertical-spacer spacer-column'>

      <div class='col-1-4  grid-row  bottom-spacer  faded'>
        <%= f.label :nickname %>
      </div>
      <div class='col-3-4  bottom-spacer'><%= f.text_field :nickname %></div>

      <div class='col-1-4  grid-row  bottom-spacer  faded'><%= f.label :email %></div>
      <div class='col-3-4  bottom-spacer'><%= f.text_field :email %></div>


      <div class='col-1-4  grid-row  bottom-spacer  faded'>
        <%= f.label :password %>
      </div>
      <div class='col-3-4  bottom-spacer'>
        <%= f.password_field :password %>
      </div>

      <div class='col-1-4  grid-row  bottom-spacer  faded'>
          <%= f.label :password_confirmation %>
      </div>
      <div class='col-3-4  bottom-spacer'>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class='col-1-4  grid-row  bottom-spacer  faded'>
        <%= f.label :admin, 'Admin Status' %>
      </div>
      <div class='col-3-4  bottom-spacer'>
        <%= f.check_box :admin %>
      </div>

      <div class='col-1-4 grid-row  vertical-spacer  no-print'>&nbsp;</div>
      <div class='col-3-4 no-r-pad  vertical-spacer  no-print'>
        <%= render 'buttons/submit', f: f %> or <%= cancel_link path: users_path %>
      </div>

    </div>
    <div class='col-2-24  spacer-column'>
      <%= view_link user, size: '2x' %>
    </div>
  </fieldset>
<% end %>
