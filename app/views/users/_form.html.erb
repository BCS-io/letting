<%= form_for user do |f| %>
  <%= render 'shared/errors', object: user %>

  <fieldset id='user' class='shell'>

    <div class="grid">
      <div class='col-1-2 vertical-spacer'>
        <h2>User</h2>
      </div>
      <div class='col-1-2 vertical-spacer'>
        <%= view_link(user) %>
      </div>
    </div>

    <div class="grid">

      <div class='col-1-4 vertical-spacer'>
       <%= f.label :nickname %>
      </div>
      <div class='col-3-4 vertical-spacer'>
        <%= f.text_field :nickname %>
      </div>
      <div class='col-1-4 vertical-spacer'>
       <%= f.label :email %>
      </div>
      <div class='col-3-4 vertical-spacer'>
        <%= f.text_field :email %>
      </div>
      <div class='col-1-4 vertical-spacer'>
       <%= f.label :password %>
      </div>
      <div class='col-3-4 vertical-spacer'>
       <%= f.password_field :password %>
      </div>
      <div class='col-1-4 vertical-spacer'>
       <%= f.label :password_confirmation %>
      </div>
      <div class='col-3-4 vertical-spacer'>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class='col-1-4 vertical-spacer'>
        <%= f.label :admin, 'Admin Status' %>
      </div>
      <div class='col-3-4 vertical-spacer'>
        <%= f.check_box :admin %>
      </div>

    </div>

  </fieldset>
  <div class='no-print'>
    <%= f.submit %> or <%= link_to 'Cancel', users_path, class: 'warn' %>
  </div>
<% end %>
