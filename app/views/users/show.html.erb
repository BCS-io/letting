<% @title='View User' %>

<div class='grid  shell-1-6'>

  <div class='col-23-24  grid-row  bottom-spacer'>     <!-- 1st column -->

    <div class='col-2-6  grid-row  bottom-1-line-spacer  faded'>User ID</div>
    <div class='col-4-6  bottom-1-line-spacer'><%= @user.id %></div>

    <div class='col-2-6  grid-row  bottom-1-line-spacer  faded'>Nickname</div>
    <div class='col-4-6  bottom-1-line-spacer'><%= @user.nickname %></div>

    <div class='col-2-6  grid-row  bottom-1-line-spacer  faded'>email</div>
    <div class='col-4-6  bottom-1-line-spacer'><%= @user.email %></div>

    <div class='col-2-6  grid-row  bottom-1-line-spacer  faded'>Role</div>
    <div class='col-4-6  bottom-1-line-spacer'><%= @user.role %></div>
  </div>

  <div class='col-1-24  bottom-spacer'>     <!-- 2nd column -->
    <%= edit_link @user %>
  </div>
</div> <!-- grid  shell -->
