<%= form_for charge_cycle do |f| %>
  <%= render 'shared/errors', object: charge_cycle %>

  <fieldset id='charge_cycle' class='shell'>

    <div class="grid">
      <div class='col-1-2 vertical-spacer'>
        <h2>Charge Cycle</h2>
      </div>
    </div>

    <div class="grid">

      <div class='col-1-4 vertical-spacer'>
       <%= f.label :name %>
      </div>
      <div class='col-3-4 vertical-spacer'>
        <%= f.text_field :name %>
      </div>

    </div>

    <hr>
    <div class='col-1-4 no-print'>
      &nbsp;
    </div>
    <div class='col-3-4 no-r-pad no-print'>
      <%= f.submit class: 'primary' %> or <%= link_to 'Cancel', charge_cycles_path, class: 'warn' %>
    </div>

  </fieldset>
<% end %>
