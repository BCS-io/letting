<%= form_for charge_cycle do |f| %>
  <%= render 'shared/errors', object: charge_cycle %>

  <fieldset id='charge_cycle' class='shell'>

    <div class="grid">
      <div class='col-1-2 vertical-spacer'>
        <h2>Charge Cycle</h2>
      </div>
      <div class='col-1-2 vertical-spacer'>
        <%= view_link(charge_cycle) %>
      </div>

    </div>

    <div class="grid">
      <div class='col-1-4 '>
        &nbsp;
      </div>
      <div class='col-1-4 vertical-spacer faded'>
       <%= f.label :name %>
      </div>
      <div class='col-2-4 vertical-spacer'>
        <%= f.text_field :name %>
      </div>

      <div class='col-1-4 '>
        &nbsp;
      </div>

      <div class='col-1-4 vertical-spacer faded'>
       <%= f.label :order %>
      </div>
      <div class='col-2-4 vertical-spacer textrmargin'>
        <%= f.text_field :order %>
      </div>

      <hr class = 'faded'>
      <div class='col-1-4 '>
        &nbsp;
      </div>

      <div class='col-1-6 vertical-spacer faded'>
        Due Ons
      </div>
      <div class='col-1-6 vertical-spacer'>
        <div class='faded'> Day</div>
      </div>
      <div class='col-1-6 vertical-spacer'>
        <div class='faded'> Month </div>
      </div>
      <div class='col-1-6 vertical-spacer'>
        <div class='faded'> Year </div>
      </div>

      <%= f.fields_for :due_ons do |builder| %>

        <div class='col-1-4'>
          &nbsp;
        </div>
        <div class='col-1-6'>
          &nbsp;
        </div>
        <div class='col-1-6 vertical-spacer'>
          <%= builder.text_field :day %>
        </div>
        <div class='col-1-6 vertical-spacer'>
          <%= builder.text_field :month %>
        </div>
        <div class='col-1-6 vertical-spacer'>
          <%= builder.text_field :year %>
        </div>
      <% end %>
    </div>

    <hr>
    <div class='col-1-4 no-print'>
      &nbsp;
    </div>
    <div class='col-3-4 no-r-pad no-print'>
      <%= f.submit class: 'primary' %> or <%= link_to 'Cancel', charge_cycles_path, class: 'warn' %>
    </div>

  </fieldset>
<% end %>
