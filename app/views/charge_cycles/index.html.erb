<% @title='Charge Cycles' %>

<div class='grid shell'>

  <div class='col-1-3 vertical-spacer grid-header'>
    Name
  </div>
  <div class='col-1-6 grid-header'>
    Order
  </div>
  <div class='col-1-6 grid-header no-print r-align'>
    Type
  </div>
  <div class='col-1-6 grid-header no-print r-align'>
    Actions
  </div>

 <% @charge_cycles.each do |charge_cycle| %>
    <div class='table-row' data-link='<%= charge_cycle_path(charge_cycle) %>'>
      <div class='col-1-3 vertical-spacer inherit-row grid-row'>
       <%= charge_cycle.name %>
      </div>
         <div class='col-1-6 inherit-row'>
       <%= charge_cycle.order %>
      </div>
      <div class='col-1-6 inherit-row r-align'>
        <%= charge_cycle.period_type %>
      </div>
            <nav class='col-1-6 no-print r-align'>
        <%= link_to fa_icon('edit lg'), edit_charge_cycle_path(charge_cycle), title: 'Edit', class: 'r-pad icon-large' %>
        <%= link_to fa_icon('trash-o lg'), charge_cycle, method: :delete, data: { confirm: 'Are you sure?' }, title: 'Delete', class: 'l-pad' %>
      </nav>
    </div>
  <% end %>



</div>
