<% @title='View Charge Cycle' %>

<div class='shell'>

  <div class="grid">
    <div class='col-1-2 vertical-spacer'>
      <h2>Charge Cycle View</h2>
    </div>
    <div class='col-1-2 vertical-spacer  no-r-pad'>
      <%= link_to fa_icon('edit'), edit_charge_cycle_path(@charge_cycle), class: 'simple-button float-right' %>
    </div>
  </div>

  <div class='grid'>

    <div class='col-1-6 vertical-spacer faded'>
     Name
    </div>
    <div class='col-5-6 vertical-spacer'>
     <%= @charge_cycle.name %>
    </div>

    <div class='col-1-6 vertical-spacer faded'>
     Order
    </div>
    <div class='col-5-6 vertical-spacer'>
     <%= @charge_cycle.order %>
    </div>

    <hr class = 'faded'>

    <div class='col-1-6 vertical-spacer faded'>
      Due Ons
    </div>
    <div class='col-1-6 vertical-spacer'>
      <div class='faded'> Day</div>
    </div>
    <div class='col-4-6 vertical-spacer'>
      <div class='faded'>Month </div>
    </div>

    <% @charge_cycle.due_ons.each  do |due_on| %>
      <div class='col-1-6 vertical-spacer faded'>
      </div>
      <div class='col-1-6 vertical-spacer'>
        &nbsp; <%= due_on.day %>
      </div>
      <div class='col-4-6 vertical-spacer'>
       &nbsp; &nbsp;<%= due_on.month %>
      </div>
    <% end %>
  </div>
</div>
