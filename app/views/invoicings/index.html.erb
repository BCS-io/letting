<% @title='Invoicing' %>

<div class='grid shell'>

  <div class='col-1-3 vertical-spacer no-print grid-header'>
   Property Range
  </div>
  <div class='col-1-6 grid-header no-print'>
    Start Date
  </div>
  <div class='col-1-6 grid-header no-print r-align'>
    End Date
  </div>
  <div class='col-1-6 grid-header no-print r-align'>
    Action
  </div>

<% @invoicings.each do |invoicing| %>
    <div class='table-row'%>
      <div class='col-1-3 vertical-spacer no-print inherit-row grid-row'>
       <%= invoicing.property_range %>
      </div>
         <div class='col-1-6 no-print inherit-row'>
       <%= l invoicing.period_first %>
      </div>
      <div class='col-1-6 no-print inherit-row r-align'>
        <%= l invoicing.period_last %>
      </div>
      <nav class='col-1-6 no-print r-align'>
        <%= link_to fa_icon('file lg'), invoicing_path(invoicing), title: 'View', class: 'r-pad icon-large' %>

        </nav>
    </div>
  <% end %>
</div>
