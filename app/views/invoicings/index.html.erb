<% @title='Invoicing' %>

<div class='grid shell'>

  <div class='col-2-6 vertical-spacer no-print grid-header'>
   Property Range
  </div>
  <div class='col-1-6 grid-header no-print'>
    Created On
  </div>
  <div class='col-1-6 grid-header no-print'>
    Bill From
  </div>
  <div class='col-1-6 grid-header no-print'>
    Bill To
  </div>
  <div class='col-1-6 grid-header no-print r-align'>
    Action
  </div>

  <% @invoicings.each do |invoicing| %>
    <div class='table-row' data-link='<%= invoicing_path(invoicing) %>'>
      <div class='col-2-6 vertical-spacer no-print inherit-row grid-row'>
        <%= invoicing.property_range %>
      </div>
      <div class='col-1-6 no-print inherit-row'>
        <%= I18n.l invoicing.created_at, format: :human %>
      </div>
      <div class='col-1-6 no-print inherit-row'>
        <%= I18n.l invoicing.period_first, format: :short %>
      </div>
      <div class='col-1-6 no-print inherit-row'>
        <%= I18n.l invoicing.period_last, format: :short %>
      </div>
      <div class='col-1-6 no-print r-align'>
        <%= link_to fa_icon('file lg'), invoicing_path(invoicing), title: 'View', class: 'r-pad' %>
        <%= link_to fa_icon('print lg'), print_path(invoicing), title: 'Print', class: 'simple_button' %>
      </div>
    </div>
  <% end %>
</div>
