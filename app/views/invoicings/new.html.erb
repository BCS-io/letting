<% @title='New Invoicing' %>

<%= form_for @invoicing do |f| %>
  <%= render 'shared/errors', object: @invoicing %>

<div id='invoicing' class='shell' style='position: relative;'>
  <div class='overlay-parent'>
    <div class="col-1-24">
      &nbsp;
    </div>
    <div class="col-12-24">
      <div class='col-1-1 vertical-spacer'>
        <h2>Invoicing</h2>
      </div>
      <div class='grid-row col-3-8 vertical-spacer'>
        Search Terms
      </div>
      <div class='col-5-8 vertical-spacer'>
        &nbsp;
      </div>
      <div class='grid-row col-3-8 vertical-spacer faded'>
        Properties
      </div>
      <div class='col-5-8 vertical-spacer'>
        <%= f.text_field :property_range, readonly: true %>
      </div>
      <div class='grid-row col-3-8 vertical-spacer faded'>
        Invoice Between
      </div>
      <div class='col-5-8 vertical-spacer'>
        <%= noticable_date_range start_date: @invoicing.start_date, end_date: @invoicing.end_date %>
          <%= f.hidden_field :start_date %>
          <%= f.hidden_field :end_date %>
      </div>
      <div class='col-2-8 vertical-spacer'>
        &nbsp;
      </div>
    </div>
    <div class="col-11-24">
      </br></br></br>
      <%= f.button submit: '', class: "primary submit-button", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Updating Invoicing..."} %> or <%= link_to 'Cancel', new_invoicing_path, class: 'warn' %>
    </div>
  </div>
  <div class="grid-row col-1-24">
    &nbsp;
  </div>
  <div class="col-22-24">
    <div class='col-3-24 vertical-spacer grid-header r-align'>
      Property ID
    </div>
    <div class='col-21-24 vertical-spacer grid-header'>
      Billing Address
    </div>
    <%= render @invoicing.invoices %>
  </div>
  <div class="grid-row col-1-24">
    &nbsp;
  </div>
  <% end %>
</div>

