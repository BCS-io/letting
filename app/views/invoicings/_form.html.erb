<%= form_for invoicing do |f| %>
  <%= render 'shared/errors', object: invoicing %>

  <fieldset id='invoicing' class='grid  shell-1-25  overlay-parent'>
    <div class='col-2-3  spacer-column'>  <!-- column 1 -->

      <div class='col-12-24  grid-row  bottom-half-line-spacer  faded'>
        <h3>Search Terms</h3>
      </div>

      <div class='col-6-24  grid-row  bottom-half-line-spacer  faded'>
        Invoice Accounts
      </div>
      <div class='col-16-24  bottom-half-line-spacer'>
        <%= f.text_field :property_range %>
      </div>

      <%= render 'invoicings/search', f: f %>

      <div class='col-6-24  grid-row  bottom-half-line-spacer  faded'>
        Invoice Date
      </div>
      <div class='col-16-24  bottom-half-line-spacer'>
        <%= date_field_tag :invoice_date, params[:invoice_date] || Time.zone.today  %>
      </div>
    </div>

    <div class='col-1-3  spacer-column'>  <!-- column 2 -->
      <div class='top-2-line-spacer'>
        <%= render 'forms/buttons', f: f, path: new_invoicing_path %>
      </div>
    </div>

    <!-- across page -->

    <div class='col-4-24  grid-row  bottom-spacer  faded'>Comments</div>
    <div class='col-16-24  bottom-spacer  faded'>
      <%= text_field_tag 'comment[]' %>
    </div>

    <div class='col-4-24  grid-row  bottom-spacer  faded'>&nbsp;</div>
    <div class='col-16-24  bottom-spacer  faded'>
      <%= text_field_tag 'comment[]' %>
    </div>

  <% if invoicing.actionable? %>

    <%= render 'invoices/invoices', run: invoicing.runs.last, action: false %>

  <% else %>
    <%= render 'account_debits/show', search_terms: params[:search_terms], start_date: params[:start_date], end_date: params[:end_date] if params[:search_terms] %>
  <% end %>
  </fieldset> <!-- grid  shell -->
<% end %> <!-- form -->

