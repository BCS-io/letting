<%= f.fields_for :billing_profile do |b| %>
<fieldset id='billing_profile' class='shell'>
  <div class='selection'>

    <div>
      <h3>BILLING ADDRESS</h3>
      <fieldset>
        <%= b.check_box :use_profile, class: 'checkbox-toggle' %>
        <%= b.label :use_profile, 'Use Agent' %>
      </fieldset>
    </div>

    <div id='blank_slate' class='togglable blank_slate_overlay'>
         Billing is to the above property address. If the bill should go to an agent click the 'Use Agent' checkbox and fill in the billing address.
    </div>

    <h3>Agent</h3>

    <div class='togglable'>
       <%= render partial: 'billing_no_agent' %>
    </div>

    <div class='togglable revealable' id = "agent_entity">
      <%= render partial: 'shared/entities', locals: { f: b, entitieable: @property.billing_profile } %>
    </div>
    <div class='togglable revealable' id = "agent_address">
      <%= render partial: 'shared/address', locals: { f: b, parent: 'property_billing_profile' } %>
    </div>
  </div>
</fieldset>
<% end %>