<h1>Edit</h1>

<%= form_for @property do |f| %>
<fieldset>
  <div class='required'>
    <%= f.label :Property_ID %>
    <%= f.text_field :human_property_reference %>
  </div>

  <%= f.fields_for :address do |address| %>
    <%= render partial: 'shared/address', locals: { f: address } %>
  <% end %>
  <% @property.entities.each do |entity| %>
    <%= f.fields_for :entities, entity do |e_form| %>
      <%= render partial: 'shared/entity', locals: { f: e_form } %>
    <% end %>
  <% end %>

  <div>
    <%= f.submit %>
  </div>
</fieldset>
<% end %>