<% @title='View Property' %>
<%= render 'properties/search', path: properties_path, search_action: 'show', search_label: 'View Search' %>
<div class='shell'>
  <div class='grid'>
    <div class='col-1-2 vertical-spacer'>
      <h2>Property Id:<%= @property.human_ref %></h2>
    </div>
    <div class='col-1-2 vertical-spacer'>
      <%= link_to 'Edit', edit_property_path(@property.id), class: 'link-button' %>
    </div>
  </div>
  <div class='grid'>
    <div class='col-1-4 vertical-spacer'>
      Client Id:
    </div>
    <div class='col-3-4 vertical-spacer'>
      <strong><%=  @property.client_ref %></strong>
    </div>
  </div>
  <% @property.entities.each do |entity| %>
    <div class='grid'>
      <div class='col-1-4 vertical-spacer'>
        Occupier
       <%= heading entity %>
      </div>
      <div class='col-3-4 vertical-spacer'>
        <strong><%= render 'shared/show_entity', object: entity %></strong>
      </div>
    </div>
  <% end %>
  <div class='grid'>
    <div class='col-1-4 vertical-spacer'>
      Address:
    </div>
    <div class='col-3-4 vertical-spacer'>
     <strong><%= render 'shared/show_1_line_address', object: @property %></strong>
    </div>
  </div>
  <%= render 'show_billing_profile', object: @property.billing_profile %>
  <%= render 'show_charges', object: @property.account.charges %>
</div>
<br>
<%= link_to 'Print This Page', '#', class: 'print-window  simple-button'%>
