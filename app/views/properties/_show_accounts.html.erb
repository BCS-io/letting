<div class = 'showbox'>
  <h3>Accounts</h3>
  <table>
    <thead>
      <tr>
        <th>
          Type
        </th>
        <th>
          Date
        </th>
        <th>
          Description
        </th>
        <th class='alnright'>
          Due
        </th>
        <th class='alnright'>
          Payment
        </th>
        <th class='alnright'>
          Balance
        </th>
      </tr>
    </thead>
    <tbody>
      <% total = 0 %>
      <% debits.each do |debit| %>
        <tr>
          <td>
            <%= debit.charge.charge_type %>
          </td>
          <td>
           <%= l debit.on_date %>
          </td>
          <td>
          </td>
          <td class='alnright'>
            <%= debit.amount %>
          </td>
          <td class='alnright'>
          </td>
          <td class='alnright'>
            <%= total = total + debit.amount %>
          </td>
        </tr>
      <% end %>
      <% payments.each do |payment| %>
        <tr>
          <td>
            <%= payment.account_id %>
          </td>
          <td>
           <%= l payment.on_date %>
          </td>
          <td>
          </td>
          <td class='alnright'>
            <%= payment.amount %>
          </td>
          <td class='alnright'>
          </td>
          <td class='alnright'>
            <%= total = total + payment.amount %>
          </td>
        </tr>
      <% end %>



    </tbody>
  </table>
</div>
