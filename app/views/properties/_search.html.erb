<div class="no-print">
  <div class='grid'>
    <div class='col-1-2 form-wrapper'>
      <%= form_tag path, method: 'get' do %>
          <%= text_field_tag :search , params[:search], placeholder: 'Search here...', data: {autocomplete_source: search_properties_path}, autofocus:true, class: 'max-2-3' %>
           <%= hidden_field_tag :search_action, search_action %>
           <button type="submit" class='max-1-3'>Search</button>
      <% end %>
    </div>
    <div class='col-2-2'>
      &nbsp;
    </div>
  </div>
</div>