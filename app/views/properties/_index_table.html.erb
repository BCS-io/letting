<div class='grid shell'>
  <div class='col-2-24 vertical-spacer grid-header r-align'>
    ID
  </div>
  <div class='col-1-24 vertical-spacer grid-header r-align'>
     Cl
  </div>
  <div class='col-4-24 vertical-spacer grid-header'>
    Name
  </div>
  <div class='col-2-24 vertical-spacer grid-header r-align'>
    No
  </div>
  <div class='col-3-24 vertical-spacer grid-header'>
   House
  </div>
  <div class='col-2-24 vertical-spacer grid-header r-align'>
    No
  </div>
  <div class='col-5-24 vertical-spacer grid-header'>
   Road
  </div>
  <div class='col-3-24 vertical-spacer grid-header'>
  Town
  </div>
  <div class='col-2-24 vertical-spacer grid-header no-print no-r-pad'>
    Actions
  </div>

 <% properties.each do |prop|
      property = PropertyDecorator.new prop %>

    <div class='table-row' data-link='<%= property_path(property.id) %>'>
      <div class='col-2-24 vertical-spacer r-align grid-row inherit-row'>
        <%= property.human_ref %>
      </div>
      <div class='col-1-24 vertical-spacer r-align inherit-row'>
         <%=property.client_ref %>
      </div>
      <div class='col-4-24 vertical-spacer inherit-row'>
        <%= format_empty_string_as_dash property.occupier %>
      </div>
      <div class='col-2-24 vertical-spacer r-align inherit-row'>
       <%= format_empty_string_as_dash property.address.flat_no %>
      </div>
      <div class='col-3-24 vertical-spacer inherit-row'>
       <%= format_empty_string_as_dash property.address.house_name %>
      </div>
      <div class='col-2-24 vertical-spacer r-align inherit-row'>
        <%= property.address.road_no %>
      </div>
      <div class='col-4-24 vertical-spacer inherit-row'>
       <%= property.address.road %>
      </div>
      <div class='col-3-24 vertical-spacer tablerow inherit-row'>
      <%= property.address.town %>
      </div>
    </div>
    <nav class='col-3-24 vertical-spacer  r-align no-r-pad'>
      <% if show_actions %>
      <%= link_to 'View', property_path(property.id) %> |
      <%= link_to 'Edit', edit_property_path(property.id) %> |
      <%= link_to 'Del', property, method: :delete, data: { confirm: "Are you sure you want to delete?" } %>
      <% end %>
    </nav>
  <% end %>
</div>
